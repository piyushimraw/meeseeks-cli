{
  "name": "@piyushimraw/meeseeks",
  "version": "1.0.0",
  "description": "AI-powered CLI for automated QA planning, test generation, and documentation management using GitHub Copilot",
  "type": "module",
  "author": {
    "name": "Piyush Shrivastava",
    "email": "piyush.srivastavaimraw@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piyushimraw/meeseeks.git"
  },
  "bugs": {
    "url": "https://github.com/piyushimraw/meeseeks/issues"
  },
  "homepage": "https://github.com/piyushimraw/meeseeks#readme",
  "keywords": [
    "cli",
    "copilot",
    "github-copilot",
    "testing",
    "qa",
    "test-generation",
    "ai",
    "terminal",
    "tui",
    "ink",
    "react-cli",
    "knowledge-base",
    "rag"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "meeseeks": "dist/index.js"
  },
  "scripts": {
    "start": "tsx src/index.tsx",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "meeseeks": "node dist/index.js",
    "link": "npm run build && npm link",
    "bundle": "esbuild src/index.tsx --bundle --platform=node --target=node20 --format=esm --outfile=dist/bundle.mjs --external:react-devtools-core  --banner:js='#!/usr/bin/env node'",
    "package": "bun build src/index.tsx --compile --outfile bin/meeseeks",
    "package:linux": "bun build src/index.tsx --compile --target=bun-linux-x64 --outfile bin/meeseeks-linux",
    "package:win": "bun build src/index.tsx --compile --target=bun-windows-x64 --outfile bin/meeseeks.exe",
    "install-local": "npm run package && grep -q \"$PWD/bin\" ~/.zshrc || echo \"\\nexport PATH=\\\"$PWD/bin:\\$PATH\\\"\" >> ~/.zshrc && echo \"Added to PATH. Run: source ~/.zshrc\""
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^4.0.3",
    "fast-glob": "^3.3.3",
    "html-to-text": "^9.0.5",
    "ink": "^5.0.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "react-devtools-core": "^4.28.5"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@yao-pkg/pkg": "^6.12.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
